<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        tools:ignore="UnusedAttribute">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_view_image_cover"
                android:layout_width="@dimen/dp140"
                android:layout_height="@dimen/dp85"
                android:scaleType="center"
                android:src="@drawable/ic_avatar" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_view_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:lines="2"
                    android:text="已有383人承包了这部番已有383人承包了这部番已有383人承包了这部番已有383人承包了这部番"
                    android:textColor="@color/font_normal"
                    android:textSize="@dimen/sp13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/item_view_thumps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp1"
                        android:background="@drawable/db_btn_radius"
                        android:paddingBottom="@dimen/dp1"
                        android:paddingLeft="@dimen/dp4"
                        android:paddingRight="@dimen/dp4"
                        android:paddingTop="@dimen/dp1"
                        android:text="10万点赞"
                        android:textColor="@color/font_white"
                        android:textSize="@dimen/sp9" />

                    <TextView
                        android:id="@+id/item_view_up_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="老番茄"
                        android:textColor="@color/font_normal"
                        android:textSize="@dimen/sp11" />

                    <TextView
                        android:id="@+id/item_view_tip_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27.2万观看 3小时前"
                        android:textColor="@color/font_normal"
                        android:textSize="@dimen/sp11" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/window_background" />-->

</LinearLayout>