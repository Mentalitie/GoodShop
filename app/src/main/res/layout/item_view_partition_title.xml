<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp8">

        <TextView
            android:id="@+id/item_view_partition_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/sp14"
            tools:text="直播分类名称" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_view_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp5"
                android:tint="@color/text_default" />

            <TextView
                android:id="@+id/item_view_partition_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/sp12"
                tools:text="查看更多" />

            <ImageView
                android:id="@+id/item_view_arrow"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp14"
                android:layout_marginLeft="@dimen/dp4"
                android:src="@drawable/ic_light_gray_arrow_right"
                android:tint="@color/font_normal" />


            <ImageView
                android:id="@+id/item_view_arrow_light"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp14"
                android:layout_marginLeft="@dimen/dp4"
                android:src="@drawable/ic_light_gray_arrow_right"
                android:tint="@color/text_default"
                android:visibility="gone" />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>